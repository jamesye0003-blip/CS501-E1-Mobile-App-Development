<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Assignment3">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Assignment3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".Q1Activity"
            android:exported="true"
            android:label="Q1 - Row and Column Weight Split Layout"
            android:theme="@style/Theme.Assignment3" />
            
        <activity
            android:name=".Q2Activity"
            android:exported="true"
            android:label="Q2 - Box Overlay with Badge"
            android:theme="@style/Theme.Assignment3" />
            
        <activity
            android:name=".Q3Activity"
            android:exported="true"
            android:label="Q3 - LazyColumn with Sticky Headers"
            android:theme="@style/Theme.Assignment3" />
            
        <activity
            android:name=".Q4Activity"
            android:exported="true"
            android:label="Q4 - Scaffold with TopAppBar, BottomBar, and FAB"
            android:theme="@style/Theme.Assignment3" />
            
        <activity
            android:name=".Q5Activity"
            android:exported="true"
            android:label="Q5 - Themed Form with TextFields and Submit Button"
            android:theme="@style/Theme.Assignment3" />
    </application>

</manifest>